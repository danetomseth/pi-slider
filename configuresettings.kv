		BoxLayout:
			BoxLayout:
				orientation: 'vertical'
				spacing: 5
				padding: 5
				Label:
					text: "Slide Direction:"
				GridLayout:
					cols: 2
					ToggleButton:
						text: "LEFT"
						on_press: root.set_slide_left()
						group: 'direction'
						state: 'down'
					ToggleButton:
						text: "RIGHT"
						group: 'direction'
						on_press: root.set_slide_right()
			Button:
				text: 'Find Home'
				on_press: root.find_slide_home()

		BoxLayout:
			Button:
				text: 'SLIDE'
				on_press: root.turn_slide_on()
			Button: 
				text: "PAN"
				on_press: root.turn_pan_on()
			Button:
				text: "Stop"
				on_press: root.turn_stepper_off()
		BoxLayout:
			Label:
				id: stepper_value_label
				text: "Stepper speed"
			Slider:
				min: 1
				max: 100
				step: 1
				id: stepper_speed_slider
				on_value: root.change_stepper_speed()
		BoxLayout:
			Label:
				id: pan_value_label
				text: "Pan speed"
			Slider:
				min: 1
				max: 100
				step: 1
				id: pan_speed_slider
				on_value: root.change_pan_speed()

		
		BoxLayout: 
			orientation: 'horizontal'
			spacing: 15
			padding: 15
			Button:
				text: 'BACK'
				on_press: root.manager.current = 'home'
			Button:
				text: 'EXIT'
				on_press: root.endProgram()
			Button:
				text: 'NEXT'
				on_press: root.manager.current = 'timelapse'