					Button:
						text: 'LEFT'
						on_press: root.scroll_pan_left()
						on_release: root.stop_motors()
					Button:
						text: 'RIGHT'
						on_press: root.scroll_pan_right()
						on_release: root.stop_motors()
			BoxLayout:
				orientation: 'vertical'
				Label:
					text: 'TILT'
				GridLayout:
					cols: 2
					Button:
						text: 'D'
					Button:
						text: 'U'
			BoxLayout:
				orientation: 'vertical'
				Label: 
					text: 'SLIDE'
				GridLayout:
					cols: 2
					Button:
						text: 'L'
						on_press: root.scroll_slide_left()
						on_release: root.stop_motors()
					Button:
						text: 'R'
						on_press: root.scroll_slide_right()
						on_release: root.stop_motors()
